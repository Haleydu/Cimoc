<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/custom_toolbar"/>
        <com.hiroshi.cimoc.ui.widget.Option
            android:id="@+id/source_detail_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:title="@string/source_detail_type"/>
        <com.hiroshi.cimoc.ui.widget.Option
            android:id="@+id/source_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:title="@string/source_detail_title"/>
        <com.hiroshi.cimoc.ui.widget.Option
            android:id="@+id/source_detail_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/source_detail_favorite"/>
    </LinearLayout>
    <include layout="@layout/custom_night_mask"/>
</FrameLayout>